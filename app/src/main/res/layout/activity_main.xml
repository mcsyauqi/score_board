<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ahmadthariqsyauqi.score.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/pic2"
        android:alpha="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="TIM A"
            android:textStyle="bold"
            android:textSize="45dp"/>
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/skor_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0"
            android:textStyle="bold"
            android:textSize="90dp"/>
        <Button
            style="@style/buttonA"
            android:id="@+id/ft_a"
            android:text="Free Throw"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="plus_ft_a"/>
        <Button
            style="@style/buttonA"
            android:id="@+id/dua_a"
            android:text="+2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="plus_dua_a"/>

        <Button
            style="@style/buttonA"
            android:id="@+id/tiga_a"
            android:text="+3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="plus_tiga_a"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="TIM B"
            android:textStyle="bold"
            android:textSize="45dp" />
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/skor_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0"
            android:textStyle="bold"
            android:textSize="90dp"/>
        <Button
            style="@style/buttonB"
            android:id="@+id/ft_b"
            android:text="Free Throw"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="plus_ft_b"/>
        <Button
            style="@style/buttonB"
            android:id="@+id/dua_b"
            android:text="+2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="plus_dua_b"/>
        <Button
            style="@style/buttonB"
            android:id="@+id/tiga_b"
            android:text="+3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="plus_tiga_b"/>

    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@drawable/pic1"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true"
        android:paddingTop="70sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:id="@+id/hasil"
        android:onClick="tampil_hasil"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginEnd="12dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button"
        android:onClick="ulangi"
        android:layout_marginEnd="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        />


</RelativeLayout>
